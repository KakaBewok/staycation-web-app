<!-- show table -->
<div
  class="tab-pane fade show active"
  id="show-item"
  role="tabpanel"
  aria-labelledby="profile-tab"
>
  <!-- Table -->
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <div class="table-responsive">
        <table
          class="table table-bordered"
          id="dataTable"
          width="100%"
          cellspacing="0"
        >
          <thead>
            <tr>
              <th>No.</th>
              <th>Name</th>
              <th>Price</th>
              <th>Country</th>
              <th>City</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i = 0; i < item.length; i++){ %>
            <tr>
              <td><%= i + 1 %></td>
              <td><%= item[i].title %></td>
              <td>$ <%= item[i].price %></td>
              <td><%= item[i].country %></td>
              <td><%= item[i].city %></td>
              <td>
                <form
                  action="/admin/item/<%= item[i].id %>/delete?_method=DELETE"
                  method="POST"
                >
                  <!-- show image room -->
                  <a
                    href="/admin/item/show-image/<%= item[i].id %>"
                    class="btn btn-info btn-circle btn-sm"
                    ><i class="fas fa-image"></i
                  ></a>
                  <!-- edit room -->
                  <a
                    href="/admin/item/<%= item[i].id %>"
                    class="btn btn-warning btn-circle btn-sm"
                    ><i class="fas fa-edit"></i
                  ></a>
                  <!-- delete room -->
                  <button
                    type="submit"
                    class="btn btn-danger btn-circle btn-sm"
                  >
                    <i class="fas fa-trash"></i>
                  </button>
                  <!-- show detail room (activity, feature, etc.) -->
                  <a
                    href="/admin/item/show-detail-item/<%= item[i].id %>"
                    class="btn btn-success btn-circle btn-sm"
                    ><i class="fas fa-plus"></i
                  ></a>
                </form>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <!-- End of table -->
</div>
